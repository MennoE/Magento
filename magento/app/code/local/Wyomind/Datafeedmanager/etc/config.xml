 * @package    Wyomind_DataFeedManager
 * @license    http://wyomind.com
 */
 --> 
<config>
    <modules>
        <Wyomind_Datafeedmanager>
            <version>3.4.2</version>
        </Wyomind_Datafeedmanager>
    </modules>
    <default>
        <datafeedmanager>
            <license>
                <version>3.4.2</version>
            </license>
        </datafeedmanager>
    </default>
    <frontend>
        <routers>
            <datafeedmanager>
                <use>standard</use>
                <args>
                    <module>Wyomind_Datafeedmanager</module>
                    <frontName>datafeedmanager</frontName>
                </args>
            </datafeedmanager>
        </routers>  
    </frontend>
    <admin>
        <routers>
            <datafeedmanager>
                <use>admin</use>
                <args>
                    <module>Wyomind_Datafeedmanager</module>
                    <frontName>datafeedmanager</frontName>
                </args>
            </datafeedmanager>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <catalog>
                <children>
                    <datafeedmanager translate="title"
						module="datafeedmanager">
                        <title>Data Feed Manager</title>
                        <sort_order>190</sort_order>
                        <action>datafeedmanager/adminhtml_datafeedmanager</action>
                    </datafeedmanager>
                </children>
            </catalog>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <catalog>
                            <children>
                                <datafeedmanager translate="title"
									module="datafeedmanager">
                                    <title>Data Feed Manager</title>
                                </datafeedmanager>
                            </children>
                        </catalog>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <datafeedmanager>
                                            <title>Data Feed Manager</title>
                                        </datafeedmanager>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <translate>
            <modules>
                <Wyomind_Googleshopping>
                    <files>
                        <default>Wyomind_Datafeedmanager.csv</default>
                    </files>
                </Wyomind_Googleshopping>
            </modules>
        </translate>
        <layout>
            <updates>
                <datafeedmanager>
                    <file>datafeedmanager.xml</file>
                </datafeedmanager>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <datafeedmanager>
                <class>Wyomind_Datafeedmanager_Model</class>
                <resourceModel>datafeedmanager_mysql4</resourceModel>
            </datafeedmanager>
            <datafeedmanager_mysql4>
                <class>Wyomind_Datafeedmanager_Model_Mysql4</class>
                <entities>
                    <datafeedmanager>
                        <table>datafeedmanager</table>
                    </datafeedmanager>
                </entities>
            </datafeedmanager_mysql4>
        </models>
        <resources>
            <datafeedmanager_setup>
                <setup>
                    <module>Wyomind_Datafeedmanager</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </datafeedmanager_setup>
            <datafeedmanager_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </datafeedmanager_write>
            <datafeedmanager_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </datafeedmanager_read>
        </resources>
        <blocks>
            <datafeedmanager>
                <class>Wyomind_Datafeedmanager_Block</class>
            </datafeedmanager>
        </blocks>
        <helpers>
            <datafeedmanager>
                <class>Wyomind_Datafeedmanager_Helper</class>
            </datafeedmanager>
        </helpers>
    </global>
    <crontab>
        <jobs>
            <datafeedmanager>
                <schedule>
                    <cron_expr>0 17 * * *</cron_expr>
                </schedule>
                <run>
                    <model>datafeedmanager/observer::generateDataFeeds</model>
                </run>
            </datafeedmanager>
        </jobs>
    </crontab>
</config>